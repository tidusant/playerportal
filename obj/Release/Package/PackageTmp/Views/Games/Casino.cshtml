    <link rel="stylesheet" href="~/Scripts/featherlight/featherlight.css" />
    <style type="text/css">
        html body .featherlight-content .featherlight-close-icon {
            background-color: rgba(255,0,0,0.75);
            font-size: 2em;
            width: 2em;
            height: 2em;
        }

        html body .featherlight-content {
            overflow-y: hidden;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            var url = $.jStorage.get("VigDns");
            var PlayerID = $.jStorage.get("PlayerID");
            $('#frmgame').attr('src', url);
            $('.btnlogout').css({ 'display': 'block' });
            $('.login').css({ 'display': 'none' });

            if (PlayerID == null) {
                $('.btnlogout').css({ 'display': 'none' });
                $('.login').css({ 'display': 'block' });
                $('.btnaccount').css({ 'display': 'none' });
            }
            else {
                $('.btnlogout').css({ 'display': 'block' });
                $('.login').css({ 'display': 'none' });
                var link = $("<a>");
                link.attr("href", "#");
                link.text('Account( ' + $.jStorage.get("Name") + ' )');

                link.attr("onclick", "GetPlayerDetails()");
                $(".btnaccount").html(link);
            }

        })
        function unloadUser() {
            wallet.player = null;
            wallet.account = null;
            wallet.LogoutPlayer();
            // window.location.href = $("#login").val();
        }

        function GetPlayerDetails() {
            wallet.getPlayerDetails();
        }

    </script>
