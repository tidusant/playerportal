                                                <div id="calcdiv">
                                                    <div id="btnarea"></div>
                                                    <div id="calcarea">

                                                        <label>Ticket Type</label>
                                                        <select id="ticket_type" name="ticket_type">
                                                            <option>Choose One:</option>
                                                            <option>Lottery Ticket</option>
                                                            <!--<option>Paper Ticket</option>-->
                                                        </select>
                                                        <br>
                                                        <label>Game Type</label>
                                                        <select name="number" id="game_type">
                                                            <option>Choose One:</option>
                                                            <option value="0">Pick 2</option>
                                                            <option value="1">Pick 3</option>

                                                        </select>
                                                        <br>
                                                        <label>Match Type</label>
                                                        <select name="number" id="match_type">
                                                            <option>Choose One:</option>
                                                            <option value="str">STR - Exact Match</option>
                                                            <option value="box">BOX - Combo</option>
                                                        </select>
                                                        <br>
                                                        <label>Number</label>
                                                        <input id="number" name="number">
                                                        <br />
                                                        <label>Amount</label>
                                                        <input id="amount" name="amount">
                                                        <br><br>
                                                        <button id="payout_submit" name="Submit" type="submit" value="Calculate">Calculate</button>
                                                        <div id="winnings"> </div>
                                                    </div>
                                                </div>
                                                <div class="favorites-controls">
                                                    <input type="text" id="favName" name="favName" />
                                                    <button type="button" id="savefavorite-action">Save Order as Favorite</button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="ct lotto-ct">
                                            <div id="placeOrder_Result">
                                                <p class="message" id="placeOrder_ResultText"></p>
                                                <div class="ct action">
                                                    <button type="button" class="action button" onclick="$('#placeOrder_Result').hide();">Close</button>
                                                </div>
                                            </div>

                                            <div id="transactionHistory">
                                                <h2>Transaction History</h2>
                                                <div id="transactionHistoryTable">
                                                    Loading...
                                                </div>
                                                <div class="ct action">
                                                    <button type="button" class="action button" onclick="$('#transactionHistory').hide();">Close</button>
                                                </div>
                                            </div>

                                            <div id="orderDetails">
                                                <h2>Order Details</h2>
                                                <div id="orderDetailsTable">
                                                    Loading...
                                                </div>
                                                <div class="ct action">
                                                    <button type="button" class="action button" onclick="$('#orderDetails').hide();">Close</button>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>




                            </dd>


                        </dl><a href="~/games/winningnumbers" class="btn btn-primary btn-sm btn-no-arrow">winning numbers</a>
                    </div>
                </div>
            </div>
</div>

