                                                                        <tr>
                                                                            <th>
                                                                            <th id="betcount" colspan="2">0 bets</th>
                                                                            <th class="invalidBets hidden-xs" colspan="3"><a href="#">Click Here to Remove All Invalid Bets</a></th>
                                                                            <th class="invalidBets hidden-sm hidden-md hidden-lg" colspan="2"><a href="#">Remove Invalid Bets</a></th>
                                                                            <th id="bettotal" colspan="1">CaD 0</th>
                                                                        </tr>
                                                                    </table>
                                                                </th>
                                                            </tr>
                                                        </tfoot>
