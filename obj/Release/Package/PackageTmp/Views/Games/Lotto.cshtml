            <div class="container">
                <ol class="breadcrumb">
                    <li><a href="~/">home</a></li>
                    <li class="active">lottery</li>
                </ol>
            </div>
        </section>
        <section class="section-bottom-30">
            <div class="container">
                <h4>Play Lottery</h4>
                <div class="row">
                    <div class="col-xs-12">
                        <dl class="terms-list wrap border-primary">
                            <dd class="text-sm-left">
                                <div class="lottery-container">
                                    <div class="row">
                                        <div class="center-ct">

                                            <div class="drawing-ct col-lg-4 col-md-6 col-xs-12">
                                                <div class="title">Drawings</div>

                                                <div id="drawing-shortcuts" class="ct">
