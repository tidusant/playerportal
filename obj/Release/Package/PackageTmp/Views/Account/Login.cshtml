@{
    ViewBag.Title = "Login";
}

<main class="page-content">
    @Html.Hidden("Login", @Url.Action("login", "Account"))
    @Html.Hidden("lobby", @Url.Action("lobby", "home"))
    @Html.Hidden("account", @Url.Action("AccountManagement", "Account"))
    @Html.Hidden("APIURL", @System.Configuration.ConfigurationManager.AppSettings["APIUrl"])
    <section>
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="~/">home</a></li>
                <li class="active">login</li>
            </ol>
        </div>
    </section>

    <!--Section 404-->
    <section class="section-bottom-50">
        <div class="container">
            <h4>login below</h4>
            <div class="row">
                <div class="col-xs-12">
                    <dl class="terms-list wrap border-primary">
                        <dt class="h5 text-uppercase">Account Login Info</dt>
                        <dd class="text-sm-left">
                            <form id="sign-in">
                                <div class="row">
                                    <div class="col-lg-1"></div>
                                    <div class="col-lg-10">
                                        <div class="form-group has-feedback">
                                            <input type="text" class="form-control form-control-has-validation form-control-last-child" placeholder="Card Number" id="username" />
                                        </div>
                                    </div>
                                    <div class="col-lg-1"></div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-1"></div>
                                    <div class="col-lg-10">
                                        <div class="form-group has-feedback">
                                            <input type="password" class="form-control form-control-has-validation form-control-last-child" id="password" placeholder="Password" data-constraints="Required" />
                                            <span class="form-validation"></span>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="row">
                                        <div class="col-sm-1"></div>
                                        <div class="col-sm-10">
                                            <div class="form-group has-feedback">
                                                <a href="@Url.Action("ForgotPassword", "Account")">forgot password</a>
                                            </div>
                                        </div>
                                    </div>*@
                                <div class="row">
                                    <div class="col-lg-1"><input type="hidden" name="Coords" id="coords" /></div>
                                    <div class="col-lg-10"><button class="btn btn-emerland btn-sm-2 btn-shadow btn-rect btn-icon btn-icon-left btnSignIn" onclick="event.preventDefault();"><span>sign in</span></button></div>
                                    <div class="col-lg-1"></div>
                                </div>
                            </form>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

    </section>

</main>
@section AdditionalFooterScripts
{
    <script src="~/Scripts/js/login.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            var PlayerID = $.jStorage.get("PlayerID");

            if (PlayerID == null) {
                $('.btnlogout').css({ 'display': 'none' });
                $('.login').css({ 'display': 'block' });
                $('.btnaccount').css({ 'display': 'none' });

            }
            else {
                $('.btnlogout').css({ 'display': 'block' });
                $('.login').css({ 'display': 'none' });
                $('.btnaccount').css({ 'display': 'block' });
                $('.btnaccount').text('Account( ' + $.jStorage.get("Name") + ' )');
            }
        })

    </script>
}

